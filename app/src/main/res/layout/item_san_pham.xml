<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/hinh_san_pham"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/ten_san_pham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hangsan_xuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/gia_san_pham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FF5722" />

        <LinearLayout
            android:id="@+id/so_luong_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nut_giam"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_minus"
                android:text="-"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:backgroundTint="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/so_luong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="1"
                android:textSize="16sp"
                android:gravity="center"
                android:minWidth="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nut_tang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_plus"
                android:text="+"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:backgroundTint="@android:color/holo_green_light" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingStart="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nut_xem_thong_tin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem thông tin"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nut_them_vao_gio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm vào giỏ"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nut_sua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nut_xoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nut_xoa_trong_gio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:textSize="12sp"
            android:backgroundTint="@android:color/holo_red_light"
            android:visibility="gone"
            app:cornerRadius="8dp" />
    </LinearLayout>
</LinearLayout>