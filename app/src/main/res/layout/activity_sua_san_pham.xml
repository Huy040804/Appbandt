<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa sản phẩm"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:textColor="@android:color/black"/>

    <!-- Hình ảnh sản phẩm -->
    <ImageView
        android:id="@+id/hinh_san_pham"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:contentDescription="Hình ảnh sản phẩm"
        android:src="@drawable/default_image"/>

    <!-- Nút chọn hình -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/nutchon_hinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Chọn hình"
        android:layout_marginTop="8dp"
        app:cornerRadius="8dp"/>

    <!-- Tên sản phẩm -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sản phẩm"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/nhap_ten_san_pham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Giá sản phẩm -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá (VNĐ)"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/nhap_gia_san_pham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Hãng sản xuất -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hãng sản xuất"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/nhap_hang_san_xuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Mô tả -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả sản phẩm"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/nhap_mo_ta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Tồn kho -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tồn kho"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/nhap_ton_kho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nút lưu và hủy -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nutluu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:layout_marginEnd="8dp"
            app:cornerRadius="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nuthuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            app:cornerRadius="8dp"/>
    </LinearLayout>
</LinearLayout>
